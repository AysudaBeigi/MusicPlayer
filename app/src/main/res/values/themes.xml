<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/black_21</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_12</item>
        <item name="colorPrimaryVariant">@color/black_21</item>
        <item name="colorOnPrimary">@color/white_ee</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_00</item>
        <item name="colorSecondaryVariant">@color/red_36</item>
        <item name="colorOnSecondary">@color/yellow_58</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextStyle">
        <item name="android:textColor">@color/white_ee</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/orange_00</item>
        <item name="boxBackgroundColor">@color/red_36</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/red_36</item>
        <item name="colorControlActivated">@color/red_36</item>
    </style>
</resources>