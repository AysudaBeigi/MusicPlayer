<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="5dp"
    tools:context=".controller.fragment.MusicFragment">

    <RelativeLayout
        android:id="@+id/layout_introduction"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_short_music_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/note" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_view_short_music_fragment"
            android:layout_toRightOf="@+id/image_view_short_music_fragment"
            android:gravity="center"
            android:textColor="@color/orange_00"
            android:textStyle="bold"
            android:theme="@style/TextStyle"
            tools:text="this is music name " />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_title"
            android:layout_toEndOf="@+id/image_view_short_music_fragment"
            android:layout_toRightOf="@+id/image_view_short_music_fragment"
            android:gravity="center"


            android:theme="@style/TextStyle"
            tools:text="this is artist name " />


    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_cover"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/layout_introduction"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/violon" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_seekbar"
        android:layout_below="@+id/image_view_cover">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </androidx.appcompat.widget.AppCompatSeekBar>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_time_come_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_playing"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white_ee"
            tools:text="1:25" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_playing"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white_ee"
            tools:text="12:45" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_seekbar"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:padding="10dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_shuffle"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/shuffle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_perv_Play_next"
            android:layout_toRightOf="@id/image_view_shuffle"
            android:layout_toLeftOf="@id/image_view_repeat"
            android:layout_toEndOf="@id/image_view_shuffle"
            android:layout_toStartOf="@id/image_view_repeat"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_previouse"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/previous"
            android:layout_alignParentStart="true" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            app:srcCompat="@drawable/play" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_next"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/next"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_repeat"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/repeat2" />
    </RelativeLayout>


</RelativeLayout>