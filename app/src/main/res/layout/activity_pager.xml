<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.PagerActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_music_player"
        android:layout_width="match_parent"
        android:background="@color/orange_00"
        android:layout_height="wrap_content"><!--
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_all_musics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_musics"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_albums"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_artists"
            />-->
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2_music_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>